{
  "wake_word": "джарвис",
  "language": "ru-RU",
  "voice_model": "jarvis_tts",
  "llm_model": "mistralai/Mistral-7B-Instruct-v0.2",
  "memory_retention_days": 90,
  "learning_enabled": true,
  "privacy_mode": true,
  
  "speech_recognition": {
    "model_path": "models/vosk-model-ru",
    "sample_rate": 16000,
    "silence_threshold": 0.01,
    "max_silence_duration": 2.0
  },
  
  "speech_synthesis": {
    "model_name": "tts_models/multilingual/multi-dataset/xtts_v2",
    "sample_rate": 22050,
    "voice_effects": {
      "reverb": true,
      "pitch": 1.0,
      "speed": 1.0
    }
  },
  
  "nlp": {
    "max_tokens": 150,
    "temperature": 0.7,
    "top_p": 0.9
  },
  
  "memory": {
    "vector_db_path": "data/memory_db",
    "embedding_model": "paraphrase-multilingual-MiniLM-L12-v2",
    "max_context_memories": 5
  },
  
  "learning": {
    "min_interactions_for_training": 10,
    "feedback_weight": 0.8,
    "auto_save_interval": 300
  },
  
  "autonomous_learning": {
    "continuous": true,
    "speed": "turbo",
    "enabled": true,
    "interval_hours": 6,
    "max_articles_per_session": 20,
    "sources": ["rss", "search", "trending", "reddit", "github", "stackoverflow"],
    "deep_analysis": true
  }
}
